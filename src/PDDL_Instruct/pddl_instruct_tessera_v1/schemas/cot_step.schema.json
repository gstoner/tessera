{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PDDL CoT Step",
  "type": "object",
  "required": [
    "step",
    "action",
    "applicable",
    "reason",
    "effects",
    "constraints",
    "state_hash"
  ],
  "properties": {
    "step": {
      "type": "integer",
      "minimum": 1
    },
    "action": {
      "type": "string"
    },
    "applicable": {
      "type": "boolean"
    },
    "reason": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "effects": {
      "type": "object",
      "properties": {
        "add": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "del": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "add",
        "del"
      ]
    },
    "constraints": {
      "type": "object",
      "properties": {
        "shared_memory_bytes": {
          "type": "integer",
          "minimum": 0
        },
        "limit_shared_memory_bytes": {
          "type": "integer",
          "minimum": 0
        },
        "registers_per_thread": {
          "type": "integer",
          "minimum": 0
        },
        "limit_registers_per_thread": {
          "type": "integer",
          "minimum": 0
        },
        "occupancy_target_met": {
          "type": "boolean"
        },
        "occupancy_estimate": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        }
      },
      "additionalProperties": true
    },
    "estimates": {
      "type": "object"
    },
    "state_hash": {
      "type": "string"
    }
  }
}